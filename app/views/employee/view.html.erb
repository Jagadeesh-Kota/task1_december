<h1>Your Employee Data:</h1>

<% @user.each do |emp| %>
    <table>    
        <tr>
            <td>ID</td>
            <td>:</td>
            <td><%= emp.id %><br></td>
        </tr>

        <tr>
            <td>First Name</td>
            <td>:</td>
            <td><%= emp.fname %><br></td>
        </tr>
        
        <tr>
            <td>Last Name</td>
            <td>:</td>
            <td><%= emp.lname %><br></td>
        </tr>
        
        <tr>
            <td>Employee ID</td>
            <td>:</td>
            <td><%= emp.empid %><br></td>
        </tr>
        
        <tr>
            <td>Email ID</td>
            <td>:</td>
            <td><%= emp.mail_id %><br></td>
        </tr>
              
        <tr>
            <td>Job</td>
            <td>:</td>
            <td><%= emp.job %><br></td>
        </tr>
          
        <tr>
            <td>MGR</td>
            <td>:</td>
            <td><%= emp.mgr %><br></td>
        </tr>
          
        <tr>
            <td>Hire Date</td>
            <td>:</td>
            <td><%= emp.hiredate %><br></td>
        </tr>
          
        <tr>
            <td>Salary</td>
            <td>:</td>
            <td><%= emp.salary %><br></td>
        </tr>
          
        <tr>
            <td>COMM</td>
            <td>:</td>
            <td><%= emp.comm %><br></td>
        </tr>
          
        <tr>
            <td>Dept No</td>
            <td>:</td>
            <td><%= emp.deptno %><br></td>
            
        </tr>
    </table>
    
      <hr> 
<% end %>

<h6>For editing data click on Id otherwise click on No Thanks</h6>
<%= form_tag('/employee/edit') do %>
     ID:<%= number_field_tag 'id' %>
     <button name="button" type="submit">Edit</button><br><br>
<% end %>
<%= form_tag('/employee/index') do %>
    <button name="button" type="submit">No Thanks</button>
<% end %>

